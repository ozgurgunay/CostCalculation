@model AdminModel.UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
}



<div class="container mt-4">
    <div class="row align-items-start">
        <div class="col-md-3">
            <h4>Rol Oluştur</h4>
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-info" role="alert">
                    @ViewData["SuccessMessage"]
                </div>
            }
            <form asp-action="UpdateRole" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <div class="row">
                        <div class="d-flex align-items-center mb-4">
                            <label asp-for="Name" class="control-label mb-2 me-3"></label>
                            <input asp-for="Name" class="control-label mb-2 me-3" />
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="text-end">
                            <input type="submit" value="Güncelle" class="btn btn-primary" style="width: 80px" />
                        </div>
                    </div>
                </div>
            </form>
            <div class="text-end mt-2">
                <a asp-action="Index">Listeye Git</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}