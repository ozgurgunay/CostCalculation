<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var currentUrl = HttpContextAccessor.HttpContext?.Request?.Path;
}

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home/Index/">Maliyet Hesaplama</a>
            </div>

            <ul class="nav navbar-nav">
                <li class="nav-item @(currentUrl == "/Home/Index" ? "active" : "")">
                    <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                </li>
                <li class="nav-item @(currentUrl == "/Product/Index" ? "active" : "")">
                    <a class="nav-link" href="/Product/Index">Ürün Ekleme</a>
                </li>
                <li class="nav-item @(currentUrl == "/Product/PalletCalculateList" ? "active" : "")">
                    <a class="nav-link" href="/Product/PalletCalculateList">Palet Bazlı Ürün Listesi</a>
                </li>
                <li class="nav-item @(currentUrl == "/Product/ExchangeCalculateList" ? "active" : "")">
                    <a class="nav-link" href="/Product/ExchangeCalculateList">Döviz Bazlı Maliyetler</a>
                </li>
                <li class="nav-item @(currentUrl == "/Ambalaj/Index" ? "active" : "")">
                    <a class="nav-link" href="/Ambalaj/Index">Ambalaj Listesi</a>
                </li>
                <li class="nav-item @(currentUrl == "/Page3" ? "active" : "")">
                    <a class="nav-link" href="/Page3">Page 3</a>
                </li>
            </ul>


        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

</body>
</html>


